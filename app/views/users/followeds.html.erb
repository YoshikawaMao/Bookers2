<h1>Follow　Users</h1>
<% if @followeds.size == 0 %>
     <p>userはいません</p>
<% else %>

     <table class="table table-hover table-inverse">
         <thead>
             <tr>
                 <th>image</th>
                 <th>name</th>
                 <th colspan="3"></th>
             </tr>
         </thead>
         <tbody>
             <% @followeds.each do |user| %>
                 <tr>
                     <td><%= attachment_image_tag user, :profile_image, :fill, 100, 100, fallback: 'no_image.jpg' %></td>
                     <td><%= user.name %></td>
                     <td><%="フォロー数 :#{user.followers.count}" %></td>
                     <td><%="フォロワー数 :#{user.followeds.count}" %></td>
                     <td><%= link_to "Show", user_path(user.id) %></td>
                 </tr>
             <% end %>
         </tbody>
     </table>
<% end %>